<Window x:Class="Movie_recommendation.Views.AllMoviesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movie_recommendation.Views"
        mc:Ignorable="d"
        Title="AllMoviesWindow" Background="Black" Height="450" Width="857" Initialized="Window_Initialized" BorderBrush="Black" OpacityMask="Black" Loaded="Window_Loaded" >
    <Grid Background="#FF05141B">
        <Grid.RowDefinitions>
            <RowDefinition Height="381*" />
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <WrapPanel x:Name="MainPanel" Background="#FF05141B"/>
        </ScrollViewer>
        <Button x:Name="BtnConfirm" Content="Confirm" HorizontalAlignment="Left"  Margin="275,0,0,0" Grid.Row="1" VerticalAlignment="Bottom" Width="235.5" Height="38" Background="#FF0F2C3A" FontSize="16" Click="BtnConfirm_Click"/>
    </Grid>
</Window>
